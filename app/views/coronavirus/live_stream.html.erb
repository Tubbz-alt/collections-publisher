<% content_for :title, "Update livestream" %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">

    <div class="govuk-!-padding-bottom-6">
      <% if @live_stream.state %>
        <%= link_to "Turn it off", coronavirus_update_live_stream_path(:on => false), method: :post, class: "govuk-button" %>
      <% else %>
        <%= link_to "Turn it on", coronavirus_update_live_stream_path(:on => true), method: :post, class: "govuk-button" %>
      <% end %>
    <div>
      <%= render "govuk_publishing_components/components/button", {
          text: "View live version",
          href: published_url("coronavirus"),
          target: "_blank",
          secondary: true
        } %>
    </div>
  </div>
</div>
