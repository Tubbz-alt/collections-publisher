<div class="app-side">
  <div class="app-side__actions">

    <%= link_to "Publish", coronavirus_page_publish_path(@coronavirus_page.slug), method: :post, class: "govuk-button" %>

    <%= render "govuk_publishing_components/components/button", {
      text: "Preview",
      href: draft_govuk_url(@coronavirus_page.base_path),
      target: "_blank",
      secondary: true
    } %>
    
    <%= link_to 'Discard changes', "#",class: %w(govuk-link govuk-link--no-visited-state app-link--destructive) %>

    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible" />
    <%= link_to "View on GOV.UK", "#", target: "_blank", class: "govuk-link govuk-link--no-visited-state" %>
  </div>
</div>
