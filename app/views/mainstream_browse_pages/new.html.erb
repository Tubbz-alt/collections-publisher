<%= content_for :page_title, "New mainstream browse page" %>

<%= form_for mainstream_browse_page do |f| %>
  <h2>New mainstream browse page</h2>

  <% if parent.present? %>
    <p>Parent: <%= parent.title %></p>
    <%= f.hidden_field :parent_id, value: parent.id %>
  <% end %>
  <%= f.text_field :slug %>
  <%= f.text_field :title %>
  <%= f.text_field :description %>

  <button>Create</button>
<% end %>
