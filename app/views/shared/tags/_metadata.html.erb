<section class="attributes">
  <dl>
    <dt>URL</dt>
    <dd><%= link_to resource.base_path, resource.web_url %></dd>

    <% if resource.has_parent? %>
    <dt>Parent</dt>
    <dd><%= link_to resource.parent.title, polymorphic_path(resource.parent) %></dd>
    <% end %>

    <dt>Description</dt>
    <dd>
      <% if resource.description.present? %>
      <%= resource.description %>
      <% else %>
      <em>Empty</em>
      <% end %>
    </dd>

    <dt>State</dt>
    <dd><%= status resource.state, resource.state %></dd>

    <dt>Child ordering</dt>
    <dd><%= resource.child_ordering %></dd>
  </dl>
</section>
