<%= content_for :page_title, "Topics" %>

<header class="heading-with-actions">
  <h1>Topics</h1>

  <% if gds_editor? %>
    <nav class="actions">
      <%= link_to new_topic_path, class: 'new' do %>
        <span class="icon"></span> Add a topic
      <% end %>
    </nav>
  <% end %>
</header>

<%= render 'shared/tags/table',
      resources: @topics,
      empty_message: "No topics exist yet" %>
