<%= header "New topic",
  breadcrumbs: [:topics, @topic.parent, "New"] %>

<%= form_for @topic, html: { class: 'topic' } do |f| %>
  <%= f.select :parent_id,
      Topic.sorted_parents.map { |topic| [topic.title, topic.id] },
      { include_blank: true },
      { class: 'select2',
        data: { placeholder: "Choose a parent topic (optional)" } } %>

  <%= f.text_field :slug %>
  <%= f.text_field :title %>
  <%= f.text_field :description %>
  <em>This description will be displayed in the search results.</em>

  <%= f.check_box :beta %>

  <%= f.submit 'Create', class: 'btn-submit' %>
<% end %>
